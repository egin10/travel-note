<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.abonsapi.moderndesignui">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.BusActivity"></activity>
        <activity android:name=".Activity.BikeActivity" />
        <activity android:name=".Activity.TrainActivity" />
        <activity android:name=".Activity.PlaneActivity" />
        <activity android:name=".Activity.BoatActivity" />
        <activity android:name=".Activity.WalkingActivity" />
        <activity android:name=".Activity.MainActivity" />
        <activity android:name=".Activity.SplashscreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>